import java.util.*;
 
class palindrome
{
   public static void main(String[] args)
   {
      String a, b = "";
      Scanner sf = new Scanner(System.in);
 
      System.out.println("Enter a word: ");
      a = sf.nextLine();
 
      int length = a.length();
 
      for ( int i = length - 1; i >= 0; i-- )
         b = b + a.charAt(i);
 
      if (a.equals(b))
         System.out.println(a+" is a palindrome");
      else
         System.out.println(a+" is not a palindrome");
   }
}
